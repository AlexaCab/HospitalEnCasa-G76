@page
@model HospiEnCasa.Frontend.Pages.CrearPacienteModel
@{
    ViewData["Title"] = "Crear Paciente";
}

<h1>Adicionar nuevo Paciente</h1>
<h2>@ViewData["Error"]</h2>

<form method="POST" class="row g-3">
    <div class="col-md-4">
        <label asp-for="Paciente.Nombre" class="form-label">Nombre</label>
        <input type="Text" asp-for="Paciente.Nombre" class="form-control" id="txtNombre">
        <span asp-validation-for="Paciente.Nombre" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Paciente.Apellido" class="form-label">Apellido</label>
        <input type="Text" asp-for="Paciente.Apellido" class="form-control" id="txtApellido">
        <span asp-validation-for="Paciente.Apellido" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Paciente.Telefono" class="form-label">Telefono</label>
        <input type="Text" asp-for="Paciente.Telefono" class="form-control" id="txtTelefono">
        <span asp-validation-for="Paciente.Telefono" class="text-danger"></span>
    </div>
    <div class="col-4">
        <label asp-for="Paciente.Direccion" class="form-label">Direccion</label>
        <input type="text" asp-for="Paciente.Direccion" class="form-control" id="txtDireccion">
        <span asp-validation-for="Paciente.Direccion" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Paciente.Ciudad" class="form-label">Ciudad</label>
        <input type="text" asp-for="Paciente.Ciudad" class="form-control" id="inputCity">
        <span asp-validation-for="Paciente.Ciudad" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Paciente.FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
        <input type="Date" asp-for="Paciente.FechaNacimiento" class="form-control" id="FechaNacimiento">
        <span asp-validation-for="Paciente.FechaNacimiento" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Paciente.Genero" class="form-label">Genero</label>
        <select id="inputCodigo" asp-for="Paciente.Genero" class="form-select">
            <option value="0">Masculino</option>
            <option value="1">Femenino</option>
        </select>
        <span asp-validation-for="Paciente.Genero" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <span class="input-group-text" id="Medico">Medico</span>
        <select asp-for="Medico.Id" class="form-select">
        <option selected>Selecciona Medico</option>

        @foreach (var medico in Model.Medicos)
        {
            <option value="@medico.Id">@medico.Nombre @medico.Apellido</option>
        }

        </select>
        <span asp-validation-for="Medico.Id" class="form-danger"></span>
    </div>

    <div class="col-md-4">
        <span class="input-group-text" id="Enfermera">Enfermera</span>
        <select asp-for="Enfermera.Id" class="form-select">
            <option selected>Selecciona Enfermera</option>

            @foreach (var enfermera in Model.Enfermeras)
            {
               <option value="@enfermera.Id">@enfermera.Nombre @enfermera.Apellido</option>
            }

        </select>
        <span asp-validation-for="Enfermera.Id" class="form-danger"></span>
    </div>


    <form class="col-md-4">
        <INPUT TYPE="button" VALUE="Regresar" onClick="history.go(-1);" class="btn btn-outline-success"
            style="margin-left:50% ;margin-rigth:50%;">
    </form>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>

</form>